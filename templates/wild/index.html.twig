{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Séries :</h1>

    {% for program in programs %}
        <div>
            <a href="{{ path('wild_program', { 'slug': program.title }) }}">
            <h2>{{ loop.index }} / {{ program.title }} </a> - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.summary }}</p>

        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    <div class="form-group">
        {{ form_start(form) }}
        {{ form_row(form.searchField) }}
        <button class="btn btn-secondary m-2">{{ button_label|default('Save') }}</button>
        {{ form_end(form) }}
    </div>
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
