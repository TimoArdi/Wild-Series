{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
<h1>Actor</h1>

<h2>
    Name : {{ actor.name }}
</h2>

    <h2>Program : </h2>
    <ul>
                {% for program in actor.programs %}
                    <li>
                        <a href="{{ path('program_show', {'slug': program.slug}) }}">{{ program.title }}</a>
                    </li>

             {% endfor %}
    </ul>
{% endblock %}
